////////////////////////////////////////////////////////////////////////////////
int StartingConditional(){
////////////////////////////////////////////////////////////////////////////////
object oPC = GetPCSpeaker();
string sPos = GetLocalString(OBJECT_SELF,"Word");if(sPos==""){sPos = "0";}
int iChoice1 = GetLocalInt(OBJECT_SELF,"Choice1");
////////////////////////////////////////////////////////////////////////////////
// well
if(GetLocalInt(OBJECT_SELF,"Player")==7)
 {
if(!GetIsObjectValid(GetItemPossessedBy(oPC,"lizardhead"))){sPos = "";}
 }
////////////////////////////////////////////////////////////////////////////////
// card 1
else if(iChoice1==14)
 {
if(GetGold(oPC)<StringToInt(sPos)+10){sPos = "";}
 }
////////////////////////////////////////////////////////////////////////////////
// card 2
else if(iChoice1==15)
 {
if(GetGold(oPC)<StringToInt(sPos)+20){sPos = "";}
 }
////////////////////////////////////////////////////////////////////////////////
// card 3
else if(iChoice1==16)
 {
if(GetGold(oPC)<StringToInt(sPos)+15){sPos = "";}
 }
////////////////////////////////////////////////////////////////////////////////
if(sPos==""){return TRUE;}else{return FALSE;}
////////////////////////////////////////////////////////////////////////////////
}
