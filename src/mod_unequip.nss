void main(){
////////////////////////////////////////////////////////////////////////////////
object oPC = GetPCItemLastUnequippedBy();
object oItem = GetPCItemLastUnequipped();
////////////////////////////////////////////////////////////////////////////////
// Reequip racial properties ring if unequiped
if(GetTag(oItem)=="racialproperties"){DelayCommand(0.3,AssignCommand(oPC,ActionEquipItem(oItem,INVENTORY_SLOT_RIGHTRING)));DelayCommand(0.3,FloatingTextStringOnCreature("you can't unequip that item",oPC));}
////////////////////////////////////////////////////////////////////////////////
}
